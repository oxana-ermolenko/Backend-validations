<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @customer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @customer.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @customer.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>

<div id="orders">
  <% @customer.orders.each do |order| %>
    <p><strong>Product name:</strong><%= order.product_name %></p>
    <p><strong>Product count:</strong><%= order.product_count %></p>
    <p><%= link_to 'Show', order %></p>
    <p><%= link_to 'Edit', edit_order_path(order) %></p>
    <p><%= link_to 'Destroy', order, method: :delete, data: {confirm: 'Are you sure?'} %></p>
  <% end %>

</div>


